# Environment Configuration Template
# Copy this file to .env and modify values for your environment
# Different environments use different combinations of these variables

# Environment Type (development, staging, production)
ENV=development
DEBUG=True
LOG_LEVEL=DEBUG

# Server Configuration
# These are now used by both build scripts AND the Python application
API_HOST=0.0.0.0          # Server bind address (0.0.0.0 for all interfaces)
API_PORT=8000             # Server port 
API_WORKERS=1             # Number of uvicorn workers (production uses more)

# AWS Configuration
AWS_REGION=us-east-1
MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
GENERATION_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# AWS Credentials (multiple options):
# Option 1: Environment variables (explicit)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Option 2: AWS CLI configuration (recommended for development)
# Run: aws configure
# This creates ~/.aws/credentials and ~/.aws/config

# Option 3: AWS Profile (if you have multiple AWS accounts)
# AWS_PROFILE=your-profile-name

# Option 4: Test credentials (for mocked AWS services)
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test

# Production-specific AWS Configuration (only needed for production)
BEDROCK_AGENT_ROLE_ARN=your-bedrock-role-arn
GUARDRAIL_ID=your-guardrail-id

# S3 Configuration
S3_BUCKET=your-loan-documents-bucket
S3_PREFIX=loan-documents/

# Knowledge Base Configuration
KNOWLEDGE_BASE_ID=your-knowledge-base-id
DATA_SOURCE_ID=your-data-source-id

# DynamoDB Tables
LOAN_BOOKING_TABLE_NAME=your-loan-bookings-table
BOOKING_SHEET_TABLE_NAME=your-booking-sheet-table

# Model Parameters (optional - has defaults)
MAX_TOKENS_TO_SAMPLE=4000
NUMBER_OF_RETRIEVAL_RESULTS=15

# Auto-Ingestion Configuration (optional - has defaults)
AUTO_INGESTION_WAIT_TIME=600
AUTO_INGESTION_CHECK_INTERVAL=30

# CORS Configuration
# Development: Use permissive settings
# ALLOWED_ORIGINS=*
# ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# ALLOWED_HEADERS=*
# ALLOW_CREDENTIALS=true

# Staging/Production: Use specific domains
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOW_CREDENTIALS=false

# Security Configuration
USE_MOCK_AWS=true
SKIP_AWS_VALIDATION=true

# AWS Profile (optional - uncomment if needed)
# AWS_PROFILE=your-aws-profile
