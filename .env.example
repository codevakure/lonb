# Environment configuration
ENV=production
DEBUG=False
LOG_LEVEL=INFO

# Server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# AWS Configuration
AWS_REGION=us-east-1
BEDROCK_AGENT_ROLE_ARN=your-bedrock-role-arn
GUARDRAIL_ID=your-guardrail-id

# S3 Configuration
S3_BUCKET=your-loan-documents-bucket
S3_PREFIX=loan-documents/

# Knowledge Base Configuration
KNOWLEDGE_BASE_ID=your-knowledge-base-id
DATA_SOURCE_ID=your-data-source-id

# DynamoDB Tables
LOAN_BOOKING_TABLE_NAME=your-loan-bookings-table
BOOKING_SHEET_TABLE_NAME=your-booking-sheet-table

# Bedrock Configuration
MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
GENERATION_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# Model Parameters
MAX_TOKENS_TO_SAMPLE=4000
NUMBER_OF_RETRIEVAL_RESULTS=15

# Auto-Ingestion Configuration
AUTO_INGESTION_WAIT_TIME=600
AUTO_INGESTION_CHECK_INTERVAL=30

# CORS - Production Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOW_CREDENTIALS=false

# Security
USE_MOCK_AWS=false
SKIP_AWS_VALIDATION=false
