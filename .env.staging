# Staging Environment Configuration
ENV=staging
DEBUG=False
LOG_LEVEL=INFO

# Server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# AWS Configuration
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET=staging-loan-documents-bucket
S3_PREFIX=loan-documents/

# Knowledge Base Configuration
KNOWLEDGE_BASE_ID=staging-knowledge-base-id
DATA_SOURCE_ID=staging-data-source-id

# DynamoDB Tables
LOAN_BOOKING_TABLE_NAME=staging-loan-bookings
BOOKING_SHEET_TABLE_NAME=staging-booking-sheet

# Bedrock configuration
MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
GENERATION_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# CORS - Staging Configuration
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOW_CREDENTIALS=true

# Security - Staging
USE_MOCK_AWS=false
SKIP_AWS_VALIDATION=false
